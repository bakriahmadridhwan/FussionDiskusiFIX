<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardUserActivity"
    android:background="@drawable/ground2">

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/shape_toolbar02"
        android:backgroundTint="@color/young_blue">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Beranda"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/titleTv">

            <TextView
                android:id="@+id/welcomeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat datang, "
                android:textColor="@color/white"
                android:layout_below="@+id/titleTv"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/subTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abc@example.com"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_below="@+id/titleTv"/>

        </LinearLayout>



        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"/>

    </RelativeLayout>



    <TextView
        android:id="@+id/menuTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:layout_below="@id/toolbarRl"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/geserMenuTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/geser"
        android:layout_below="@id/toolbarRl"
        android:layout_marginTop="20dp"
        android:layout_marginStart="70dp"
        android:textStyle="italic"/>

    <HorizontalScrollView
        android:id="@+id/HSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/menuTv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/penjelasanBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:contentPadding="10dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="PENJELASAN"
                    android:drawableTop="@drawable/ic_baseline_help_yb"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/addCategoryBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:contentPadding="10dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="TAMBAH KATEGORI"
                    android:drawableTop="@drawable/ic_baseline_category_yb"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/addBook"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:contentPadding="10dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="TAMBAH TOPIK"
                    android:drawableTop="@drawable/ic_baseline_topic_yb"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/addCatatan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:contentPadding="10dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="CATATAN"
                    android:drawableTop="@drawable/ic_baseline_note_yb"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/infoCv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:contentPadding="10dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="INFO"
                    android:drawableTop="@drawable/ic_baseline_info_yb"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"/>

            </androidx.cardview.widget.CardView>

<!--            <Button-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="8dp"-->
<!--                android:layout_marginEnd="8dp"-->
<!--                android:text="Button 4"/>-->

<!--            <Button-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="8dp"-->
<!--                android:layout_marginEnd="8dp"-->
<!--                android:text="Button 5"/>-->

        </LinearLayout>

    </HorizontalScrollView>



    <TextView
        android:id="@+id/kategoriTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KATEGORI"
        android:layout_below="@id/HSV"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"/>


    <!--Search-->
    <EditText
        android:id="@+id/searchEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kategoriTv"
        android:hint="Cari Kategori..."
        android:drawableStart="@drawable/ic_baseline_search_yb"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:background="@color/white"
        android:textColorHint="@color/gray"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/daftarKategoriTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Kategori"
        android:layout_below="@id/searchEt"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"/>


    <!--Category-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoriesRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/daftarKategoriTv"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/row_category"
        android:layout_margin="5dp"/>

